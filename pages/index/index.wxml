<view>

	<!-- 搜索框 -->
	<SearchInput></SearchInput>

	<!-- 轮播图 -->
	<view class="index_swiper">
		<swiper indicator-dots autoplay circular>
			<swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
				<navigator>
					<image src="{{item.image_src}}" mode="widthFix"></image>
				</navigator>
			</swiper-item>
		</swiper>
	</view>

	<!-- 导航 -->
	<view class="index_nav">
		<navigator></navigator>
	</view>
</view>